
.mlist_nav {
    width: 100%;
    border: 1px solid #eee;
    border-right: 0;
    overflow: hidden;
    background-color: #FFF;
    padding: 0;
    margin-top: 0;
    display: flex;
}
.mlist_nav text.cur {
    color: #FF8F09;
    border-bottom: 2px solid #FF8F09;
}
.mlist_nav text {
    display: block;
    color: #676767;
    font-size: 14px;
    padding: 13px 0;
    border-bottom: 2px solid #FFF;
    margin: 0;
    text-align: center;
    -moz-box-flex: 1;
    -webkit-box-flex: 1;
    height: 100%;
    box-sizing: border-box;
    flex:1;
}
.mlist_nav text:nth-child(2){
    margin-right: 10px;
    background: url(//shop.bidcms.com/store/statics/images/list1.png) right no-repeat;
    background-size: 8px 12px;
}
.mlist_nav text:nth-child(3), .mlist_nav text:nth-child(4){
    margin-right: 10px;
    background: url(//shop.bidcms.com/store/statics/images/list2.png) right no-repeat;
    background-size: 8px 9px;
}
